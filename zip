import os
import zipfile

def archive_files(directory_path, archive_name):
    # Create a ZIP file
    zip_file = zipfile.ZipFile(archive_name, 'w', zipfile.ZIP_DEFLATED)

    # Iterate through all files in the directory
    for root, _, files in os.walk(directory_path):
        for file in files:
            file_path = os.path.join(root, file)
            # Add each file to the ZIP file
            zip_file.write(file_path, os.path.relpath(file_path, directory_path))

    # Close the ZIP file
    zip_file.close()

# Specify the directory path and archive name
directory_path = '/path/to/directory'  # Replace with your directory path
archive_name = 'archive.zip'  # Replace with your archive name

# Call the function to archive files
archive_files(directory_path, archive_name)
